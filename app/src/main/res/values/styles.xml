<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <item name="colorAccent">@color/app_primary_accent</item>
        <item name="android:textColorPrimary">@color/text_gray_700</item>
        <item name="android:actionMenuTextAppearance">@style/CustomMenuTextAppearance</item>
        <item name="actionMenuTextAppearance">@style/CustomMenuTextAppearance</item>
    </style>

    <style name="AppToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:paddingLeft">10dp</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--ボタンをプレスしている時、シークバーをプレスしている時の色-->
        <item name="colorControlHighlight">@color/transparent_black</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="toolbarStyle">@style/AppToolbarStyle</item>
    </style>
    <style name="AppTheme.AppBarOverlayWithoutIcon" parent="ThemeOverlay.AppCompat.ActionBar">
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="InitialFocusHolder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="CustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Button Style -->
    <style name="TextAppearance.Button" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/button_text_color_light</item>
    </style>

    <style name="ProsSaveButton" parent="Widget.AppCompat.Button">
        <!-- colorButtonNormalでstate_enable = false 以外を色設定しても、Android 4.4以前では適用されない。 -->
        <item name="colorButtonNormal">@color/button_color_pros</item>
        <item name="colorControlHighlight">@color/transparent_black</item>
        <item name="android:textAppearanceButton">@style/TextAppearance.Button</item>
        <item name="android:borderlessButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>

    <style name="ConsSaveButton" parent="Widget.AppCompat.Button">
        <!-- colorButtonNormalでstate_enable = false 以外を色設定しても、Android 4.4以前では適用されない。 -->
        <item name="colorButtonNormal">@color/button_color_cons</item>
        <item name="colorControlHighlight">@color/transparent_black</item>
        <item name="android:textAppearanceButton">@style/TextAppearance.Button</item>
        <item name="android:borderlessButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>
    <style name="OtherButton" parent="Widget.AppCompat.Button">
        <!-- colorButtonNormalでstate_enable = false 以外を色設定しても、Android 4.4以前では適用されない。 -->
        <item name="colorButtonNormal">@color/button_color</item>
        <item name="colorControlHighlight">@color/transparent_black</item>
        <item name="android:textAppearanceButton">@style/TextAppearance.Button</item>
        <item name="android:borderlessButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>
</resources>
