<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/primary_dark_material_light"
    >
    <EditText
        android:id="@+id/navigation_header_right_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:inputType="text"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:paddingLeft="8dp"
        tools:text="議題"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/buttons_container"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="2dp"
        android:background="@color/gray_200_highlight"
        />
    <android.support.v7.widget.AppCompatButton
        android:layout_marginTop="4dp"
        android:id="@+id/button_delete_this_theme"
        android:theme="@style/OtherButton"
        style="@style/OtherButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:paddingLeft="8dp"
        android:text="この議題を削除"
        />
</LinearLayout>
